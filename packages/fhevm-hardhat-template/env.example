# Hardhat Network Configuration
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Or use Alchemy: https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# Or use public RPC: https://rpc.sepolia.org

# Deployer Private Key (the account that will deploy the contract)
PRIVATE_KEY=0xYourDeployerPrivateKey

# Oracle Signer Address (the address that will sign oracle outcomes)
# This can be the same as deployer for testing, or a different address
ORACLE_SIGNER_ADDRESS=0xYourOracleSignerAddress

# Optional: Gas settings
GAS_PRICE=20000000000
GAS_LIMIT=1000000

# Optional: Etherscan API key for contract verification
ETHERSCAN_API_KEY=YourEtherscanApiKey
